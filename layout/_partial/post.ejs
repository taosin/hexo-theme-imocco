<div class="post col-xl-8 col-lg-10 col-md-10 col-sm-10">
  <div class="card">
    <div class="card-body">
      <div class="card-title">
        <h3 class="date"><%- full_date(page.date, 'MMM D,YYYY / ddd')%></h3>
        <h1 class="title"><%=page.title%></h1>
      </div>
      <p class="card-text">
        <%-page.content%>
      </p>
    </div>
    <div class="card-footer d-flex justify-content-between">
      <% if (page.prev) { %>
      <a href="<%- url_for(page.prev.path) %>">
        上一篇：<%=page.prev.title%>
      </a>
      <% } %>
      <% if (page.next) { %>
      <a href="<%- url_for(page.next.path) %>" class="btn btn-link">
        下一篇：<%=page.next.title%>
      </a>
      <% } %>
    </div>
  </div>
</div>